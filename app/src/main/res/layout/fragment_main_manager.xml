<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ui.mainManager.MainManagerFragment">

    <android.widget.Button
        android:id="@+id/bAddCustomer"
        android:layout_width="@dimen/_134sdp"
        android:layout_height="@dimen/_48sdp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/poppins"
        android:text="@string/add_customer"
        android:textColor="@color/black"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintBottom_toTopOf="@id/bScanCustomer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.9" />

    <android.widget.Button
        android:id="@+id/bScanCustomer"
        android:layout_width="@dimen/_132sdp"
        android:layout_height="@dimen/_48sdp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/poppins"
        android:text="@string/scan_customer"
        android:textColor="@color/black"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bAddCustomer" />

</androidx.constraintlayout.widget.ConstraintLayout>